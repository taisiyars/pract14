<Window x:Class="пр13.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:пр13"
        mc:Ignorable="d"
        Title="Авторизация" Height="170" Width="300" FontSize="20" WindowStartupLocation="CenterOwner" Activated="WindowActivated" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <PasswordBox x:Name="txtPas" PasswordChar="*" Margin="5"/>
            <Button Content="Войти" IsDefault="True" Click="btn_EnterClick" Margin="5"/>
            <Button Content="Отмена" IsCancel="True" Click="btn_EscClick" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
