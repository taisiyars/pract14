<Application x:Class="пр13.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:пр13"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FA8072"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#A52A2A"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#FFFAF0"/>
        </Style>
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#FFFAFA"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#A52A2A"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="#A52A2A"/>
        </Style>
    </Application.Resources>
</Application>
